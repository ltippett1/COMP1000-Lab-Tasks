#include <iostream>
using namespace std;

int main () {

    int num1;
    int num2;
    int result;
    char operation;
    std::cout << "enter a number: " << std::endl;
    std::cin >> num1;
    std::cout << "enter a second number: " <<std::endl;
    std::cin >> num2;
    std::cout << "enter the operation either +, -, * or /: " <<std::endl;
    std::cin >> operation;


    switch (operation) {
        case '+':
            result = num1 + num2;
            std::cout << "your result is: " << result << std::endl;
            break;
        case '-':
            result = num1 - num2;
            std::cout << "your result is: " << result << std::endl;
            break;
        case '*':
            result = num1 * num2;
            std::cout << "your result is: " << result << std::endl;
            break;
        case '/':
            result = num1 / num2;
            std::cout << "your result is: " << result << std::endl;
            break;
        default:
        std::cout << "invalid operation!" << std::endl;

    }

return 0;
}
